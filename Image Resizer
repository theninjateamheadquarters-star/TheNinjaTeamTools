    label { font-size: 12px; color: #9ca3af; display: block; margin-bottom: 4px; }
    input[type="number"] {
      width: 100%;
      padding: 4px 6px;
      border-radius: 8px;
      border: 1px solid #1f2937;
      background: #020617;
      color: #e5e7eb;
      font-size: 13px;
    }
    input[type="file"] {
      font-size: 12px;
      color: #e5e7eb;
    }
    .field-row {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
